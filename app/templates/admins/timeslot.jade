.page-title
  h3 
    strong Manage Time Slots
.row(ng-show="visibility")
  .col-md-12
    .tabcordion
      #myTabContent.tab-content
        #product_general.tab-pane.fade.active.in
          .row
            .col-md-12 
              form#form1.form-horizontal(name="timeslotForm") 
                .form-group 
                  label.col-sm-3.control-label 
                    | Morning 
                    span.asterisk * 
                  .col-sm-3
                    select.btn#repeatval(ng-model="slot.morning_start_time", ng-options="morning_start_time.value as morning_start_time.name for morning_start_time in slottime", ng-init="slot.morning_start_time= slot.morning_start_time || slottime[5].value")
                    | &nbsp;
                    select.btn#repeatval(ng-model="slot.morning_start_period", ng-options="morning_start_period.value as morning_start_period.name for morning_start_period in period", ng-init="slot.morning_start_period= slot.morning_start_period || period[0].value")
