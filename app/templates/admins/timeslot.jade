                    | TO
                  .col-sm-3  
                    select.btn#repeatval(ng-model="slot.morning_end_time", ng-options="morning_end_time.value as morning_end_time.name for morning_end_time in slottime", ng-init="slot.morning_end_time= slot.morning_end_time || slottime[9].value") 
